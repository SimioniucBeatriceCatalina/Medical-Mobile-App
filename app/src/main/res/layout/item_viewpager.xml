<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    app:cardUseCompatPadding="true"
    android:layout_width="285dp"
    android:layout_height="330dp"
    card_view:cardCornerRadius="15dp"
    android:layout_gravity="center">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:color="#D81B60"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <com.mikhaellopez.circularimageview.CircularImageView

                android:id="@+id/imageprofilmedic"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tnume"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="-4dp"
                android:textSize="15dp"
                app:layout_constraintEnd_toStartOf="@+id/tprenume"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tgrad" />

            <TextView
                android:id="@+id/tpregatire"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:textSize="11dp"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tnume" />

            <TextView
                android:id="@+id/tgrad"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="70dp"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageprofilmedic" />

            <TextView
                android:id="@+id/tprenume"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-16dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="15dp"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/tpregatire"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tnume"
                app:layout_constraintTop_toBottomOf="@+id/tgrad" />

            <Button
                android:id="@+id/button"

                android:layout_width="99dp"
                android:layout_height="42dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_shape6"
                android:text="Programeaza o consultatie"
                android:textColor="#ffffff"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tprenume" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.cardview.widget.CardView>